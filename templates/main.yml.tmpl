---
- hosts: all
  roles:
    - insight_infra.cloud_helper
    - geerlingguy.pip
    - geerlingguy.docker
%{ if roles != null ~}
%{ for role in roles ~}
    - ${role}
%{ endfor ~}
%{ endif ~}
  vars:
    enable_cloud_wait: true
    enable_jq: true
    pip_install_packages:
      - name: docker
      - name: docker-compose
